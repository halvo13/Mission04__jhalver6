@model GradeCalcModel

<!--Form that calculates grade for class-->
<!--Assignments 50%, Group Project 10%, Quizzes 10%, Midterm Exam 10%, Final Exam 10%, INTEX 10%-->
<div>
    <form method="post">
        <label>Assignments:</label>
        <input id="assign" asp-for="assignment" /><br />
        <label>Group Project:</label>
        <input id="proj" asp-for="project" /><br />
        <label>Quizzes:</label>
        <input id="quiz" asp-for="quiz"/><br />
        <label>Midterm Exam:</label>
        <input id="mid" asp-for="midterm"/><br />
        <label>Final Exam:</label>
        <input id="final" asp-for="final" /><br />
        <label>INTEX:</label>
        <input id="intex" asp-for="intex" /><br />
        <input id="btnSend" type="submit" value="Calculate Grade" />
    </form>
    <div id="output">

    </div>
    <div asp-validation-summary="All"></div>
</div>

<script src="js/grades.js"></script>