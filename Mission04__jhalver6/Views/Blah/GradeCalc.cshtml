@model GradeCalcModel

<!--Form that calculates grade for class-->
<!--Assignments 50%, Group Project 10%, Quizzes 10%, Midterm Exam 10%, Final Exam 10%, INTEX 10%-->
<div>
    <form method="post">
        <label>Assignments:</label>
        <input id="assign" name="assign" /><br />
        <label>Group Project:</label>
        <input id="proj" name="proj" /><br />
        <label>Quizzes:</label>
        <input id="quiz" name="quiz"/><br />
        <label>Midterm Exam:</label>
        <input id="mid" name="mid"/><br />
        <label>Final Exam:</label>
        <input id="final" name="final" /><br />
        <label>INTEX:</label>
        <input id="intex" name="intex" /><br />
        <input id="btnSend" type="submit" value="Calculate Grade" />
    </form>
    <div id="output">

    </div>
</div>

